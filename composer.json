{
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/database": "^4.2",
        "monolog/monolog": "^2",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^1",
        "selective/validation": "^0.12",
        "slim/php-view": "^3.0",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.7",
        "symfony/mailer": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Util/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    },
    "description": "",
    "name": ""
}
